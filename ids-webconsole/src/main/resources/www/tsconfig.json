{
  "compilerOptions": {
    "outDir": "build/app",
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "lib": [ "es2015", "dom" ]    
  },
  "compileOnSave": false,
  "filesGlob": [
    "app/**/*.ts"
  ]
}
