{
  "rulesDirectory": [
    "node_modules/codelyzer",
    "node_modules/rxjs-tslint-rules/dist/rules"
  ],
  "extends": [
    "angular-tslint-rules"
  ],
  "rules": {
    "rxjs-add": {
      "options": [
        {
          "allowElsewhere": false,
          "allowUnused": false,
          "file": "./app/rxjs.ts"
        }
      ],
      "severity": "error"
    },
    "curly": true,
    "comment-format": false,
    
    "i18n": false,
    "no-unused-css": false,
    "prefer-template": false,
    "component-selector": false
  }
}
